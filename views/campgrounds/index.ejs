<%- include("../partials/header") -%>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p><a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campground</a></p>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row text-center">
        <% Campground.forEach(function(campGrounds){ %>
        <div class="col-md-4 col-lg-3 col-sm-6 mb-4" style="padding: 10px;">
            <div class="card">
                <img src="<%= campGrounds.image%>" class="img-fluid" alt="campground.name">
                <div class="card-body">
                  <h5 class="card-title"><%= campGrounds.name %></h5>
                </div>
                <p>
                    <a href="campgrounds/<%= campGrounds._id %>" class="btn btn-primary">More Info</a>
                </p>
              </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") -%>